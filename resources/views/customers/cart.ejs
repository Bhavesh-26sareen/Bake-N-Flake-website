                <h1 class="font-semibold"><%=cake.item.name%></h1>
                <span class="font-semibold" ><%=cake.item.size%></span>
            </div>
            <span class="flex-1 font-semibold"><%=cake.qty%>Pcs</span>
            <span class="font-bold text-lg">₹ <%=cake.item.price * cake.qty%></span>
        </div>
        <% } %>
